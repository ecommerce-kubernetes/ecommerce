pipeline {
    agent any

    environment {
        MY_NETWORK = "buynest-network"
        DOCKER_IMAGE = "config-service"
        DOCKER_TAG = "latest"
        MY_GITHUB = credentials('github-token-id')
        MY_ENCRYPT = credentials('config-encrypt-key')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('config-service') {
                    script {
                        echo "Config Server 빌드"
                        sh "chmod +x gradlew"
                        sh "./gradlew clean build -x test"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('config-service') {
                    echo "Docker 이미지 빌드"
                    sh "docker build -t ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} ."
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "배포 시작"
                    sh "docker rm -f ${env.DOCKER_IMAGE} || true"

                    sh """
                        docker run -d --name ${env.DOCKER_IMAGE} \
                        --network ${env.MY_NETWORK} \
                        -p 8888:8888 \
                        -e SPRING_PROFILES_ACTIVE=prod \
                        -e GITHUB_USERNAME=${env.MY_GITHUB_USR} \
                        -e GITHUB_TOKEN=${env.MY_GITHUB_PSW} \
                        -e ENCRYPT_KEY=${env.MY_ENCRYPT} \
                        ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}
                    """
                }
            }
        }
    }
}