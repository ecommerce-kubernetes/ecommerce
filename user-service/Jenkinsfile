pipeline {
    // 1. í”ŒëŸ¬ê·¸ì¸ì´ ì—†ìœ¼ë¯€ë¡œ ë‹¤ì‹œ agent anyë¡œ ë³µê·€í•©ë‹ˆë‹¤!
    agent any

    environment {
        MY_NETWORK = "buynest-network"
        DOCKER_IMAGE = "user-service"
        DOCKER_TAG = "latest"
        MY_GITHUB = credentials('github-token-id') // ê¹ƒí—ˆë¸Œ í¬ë¦¬ë´ì…œ ID ë§ëŠ”ì§€ í™•ì¸!

        // â­ 2. ì  í‚¨ìŠ¤ ë¬¸ë²• ì—ëŸ¬ ë°©ì§€: Testcontainers ì„¤ì •ì€ ë¬´ì¡°ê±´ ìµœìƒë‹¨ ì—¬ê¸°ì„œ ì„ ì–¸í•©ë‹ˆë‹¤!
        TESTCONTAINERS_RYUK_DISABLED = "true"
        // ì•„ê¹Œ ì°¾ìœ¼ì‹  'ì§„ì§œ ë„ì»¤ ê²Œì´íŠ¸ì›¨ì´ IP'ë¥¼ ì…ë ¥í•˜ì„¸ìš” (ì˜ˆ: 172.18.0.1)
        TESTCONTAINERS_HOST_OVERRIDE = "172.18.0.1"
    }

    stages {
        stage('Prepare Network') {
            steps {
                sh "docker network create ${env.MY_NETWORK} || true"
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // â­ 3. ê¹”ë”í•´ì§„ Build & Test ë‹¨ê³„
        stage('Build & Test') {
            steps {
                dir('user-service') {
                    echo "ğŸš€ Testcontainers ì¶œê²©! (Target IP: ${env.TESTCONTAINERS_HOST_OVERRIDE})"
                    sh "chmod +x gradlew"
                    sh "./gradlew clean build" // í…ŒìŠ¤íŠ¸ë¥¼ í¬í•¨í•˜ì—¬ ë‹¹ë‹¹í•˜ê²Œ ë¹Œë“œ!
                }
            }
        }

        stage('Docker Image Build') {
            steps {
                dir('user-service') {
                    sh "docker build -t ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} ."
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh "docker rm -f ${env.DOCKER_IMAGE} || true"
                    sh """
                        docker run -d --name ${env.DOCKER_IMAGE} \
                        --network ${env.MY_NETWORK} \
                        -e SPRING_PROFILES_ACTIVE=prod \
                        ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}
                    """
                }
            }
        }

//         stage('Trigger Next') {
//             steps {
//                 echo 'User Service ë°°í¬ ì™„ë£Œ! Gatewayë¥¼ í˜¸ì¶œí•©ë‹ˆë‹¤.'
//                 build job: 'buynest-api-gateway', wait: false
//             }
//         }
    }
}