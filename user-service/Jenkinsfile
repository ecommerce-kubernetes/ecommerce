pipeline {
    agent any

    environment {
        MY_NETWORK = "buynest-network"
        DOCKER_IMAGE = "user-service"
        DOCKER_TAG = "latest"
    }

    stages {
        stage('Create Network') {
            steps {
                sh "docker network create ${env.MY_NETWORK} || true"
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            agent {
                docker {
                    image 'eclipse-temurin:21-jdk'

                    args '-v /var/run/docker.sock:/var/run/docker.sock --network host'
                    reuseNode true
                }
            }
            steps {
                dir('user-service') {
                    script {
                        env.TESTCONTAINERS_HOST_OVERRIDE = "localhost"
                        env.TESTCONTAINERS_RYUK_DISABLED = "true"

                        echo "ğŸš€ [SUCCESS] í˜¸ìŠ¤íŠ¸ ë„¤íŠ¸ì›Œí¬ë¥¼ ê³µìœ í•˜ëŠ” ì¼íšŒìš© ë¹Œë“œ í™˜ê²½ ì¶œê²©!"
                        sh "chmod +x gradlew"
                        sh "./gradlew clean build"
                    }
                }
            }
        }

        stage('Docker Image Build') {
            steps {
                dir('user-service') {
                    sh "docker build -t ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} ."
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh "docker rm -f ${env.DOCKER_IMAGE} || true"
                    sh """
                        docker run -d --name ${env.DOCKER_IMAGE} \
                        --network ${env.MY_NETWORK} \
                        -e SPRING_PROFILES_ACTIVE=prod \
                        ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}
                    """
                }
            }
        }

//         stage('Trigger Next') {
//             steps {
//                 echo 'User Service ë°°í¬ ì™„ë£Œ! Gatewayë¥¼ í˜¸ì¶œí•©ë‹ˆë‹¤.'
//                 build job: 'buynest-api-gateway', wait: false
//             }
//         }
    }
}