pipeline {
    agent any

    environment {
        MY_NETWORK = "buynest-network"
        DOCKER_HUB_ID = "minsik2434"
        DOCKER_IMAGE = "${DOCKER_HUB_ID}/docs-service"
        DOCKER_TAG = "latest"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Fetch API Spec') {
            steps {
                dir('docs-service') { 
                    script {
                        echo "ê¸°ì¡´ API ìŠ¤í™ ì´ˆê¸°í™”"
                        sh "mkdir -p static/api-specs" 
                        sh "rm -rf static/api-specs/*"

                        // 1. ì„¸ ì„œë¹„ìŠ¤ì˜ ìŠ¤í™ì„ ì°¨ë¡€ëŒ€ë¡œ ë‹¤ìš´ë¡œë“œ (ë§ì½ê¾¼ flatten ì˜µì…˜ì€ ì•„ì˜ˆ ì œê±°!)
                        // optional: trueë¥¼ ë„£ì–´ì„œ í˜¹ì‹œ í•˜ë‚˜ê°€ ë¹Œë“œ ì‹¤íŒ¨ ìƒíƒœì—¬ë„ íŒŒì´í”„ë¼ì¸ì´ ë©ˆì¶”ì§€ ì•Šê²Œ ë³´í˜¸í•©ë‹ˆë‹¤.
                        echo "ìœ ì € ì„œë¹„ìŠ¤ API ìŠ¤í™ Fetch"
                        copyArtifacts(
                            projectName: 'buynest-user',
                            selector: lastSuccessful(),
                            filter: 'build/api-spec/*.json',
                            optional: true
                        )

                        echo "ìƒí’ˆ ì„œë¹„ìŠ¤ API ìŠ¤í™ Fetch"
                        copyArtifacts(
                            projectName: 'buynest-product',
                            selector: lastSuccessful(),
                            filter: 'build/api-spec/*.json',
                            optional: true
                        )

                        echo "ì£¼ë¬¸ ì„œë¹„ìŠ¤ API ìŠ¤í™ Fetch"
                        copyArtifacts(
                            projectName: 'buynest-order',
                            selector: lastSuccessful(),
                            filter: 'build/api-spec/*.json',
                            optional: true
                        )

                        // 2. ğŸ”¥ í•µì‹¬: ì  í‚¨ìŠ¤ê°€ ê°€ì ¸ì˜¨ ì„¸ ê°œì˜ json íŒŒì¼ì„ í•œë°©ì— ë¹¼ëƒ…ë‹ˆë‹¤!
                        echo "JSON íŒŒì¼ ì•Œë§¹ì´ ì¶”ì¶œ ë° ì°Œêº¼ê¸° í´ë” ì‚­ì œ"
                        sh "mv build/api-spec/*.json static/api-specs/ || true"
                        
                        // 3. ë¹ˆ ê»ë°ê¸°ê°€ ëœ build í´ë”ëŠ” ì™„ì „íˆ ì‚­ì œí•©ë‹ˆë‹¤.
                        sh "rm -rf build"

                        // 4. ë„ì»¤ ë¹Œë“œ ì „, íŒŒì¼ 3ê°œê°€ ì˜ˆì˜ê²Œ ëª¨ì˜€ëŠ”ì§€ ìµœì¢… í™•ì¸
                        echo "âœ… ìµœì¢… ìŠ¤í™ í´ë” ìƒíƒœ í™•ì¸ âœ…"
                        sh "ls -la static/api-specs/"
                    }
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                dir('docs-service') {
                    echo "docs ì´ë¯¸ì§€ ë¹Œë“œ"
                    sh "ls -la static/api-specs/"
                    sh "docker build -t ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} ."

                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PW', usernameVariable: 'DOCKER_ID')]) {
                        sh "echo \$DOCKER_PW | docker login -u \$DOCKER_ID --password-stdin"
                        sh "docker push ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}"
                    }   
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('docs-service') {    
                    echo "ë°°í¬"
                    sh """
                        ansible-playbook -i ../infra/ansible/inventory.ini ../infra/ansible/deploy-basic.yml \
                        -e target_service=docs-service \
                        -e workspace=${env.WORKSPACE}
                    """
                }
            }
        }
    }
}